<script>
  const plansContainer = document.getElementById("plans-container");
  const planCards = document.querySelectorAll(".plan-card");

  planCards.forEach((card) => {
    card.addEventListener("click", () => {
      // Remover clase seleccionada de todas las tarjetas
      planCards.forEach((c) => {
        c.classList.remove("selected");
        c.classList.remove(
          "scale-105",
          "border-2",
          "border-quaternary",
          "shadow-lg",
          "shadow-quaternary/20",
        );
        c.classList.add("border", "border-border-pri");
      });

      // Agregar clase seleccionada a la tarjeta clickeada
      card.classList.add("selected");
      card.classList.add(
        "scale-105",
        "border-2",
        "border-quaternary",
        "shadow-lg",
        "shadow-quaternary/20",
      );
      card.classList.remove("border", "border-border-pri");
    });
  });
</script>

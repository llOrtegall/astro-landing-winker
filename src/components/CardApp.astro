---
import type { SvgComponent } from 'astro/types';

interface Props {
  title: string;
  description: string;
  color: "yellow" | "slate" | "red" | "blue" | "green";
  Icono: SvgComponent & ImageMetadata;
}

const { title, description, color, Icono } = Astro.props;

const colorClasses = {
  yellow: {
    gradient: "to-yellow-400/60",
    button: "bg-yellow-500 hover:bg-yellow-400",
  },
  slate: {
    gradient: "to-slate-400/60",
    button: "bg-slate-500 hover:bg-slate-400",
  },
  red: {
    gradient: "to-red-400/60",
    button: "bg-red-500 hover:bg-red-400",
  },
  blue: {
    gradient: "to-blue-400/60",
    button: "bg-blue-500 hover:bg-blue-400",
  },
  green: {
    gradient: "to-green-400/60",
    button: "bg-green-500 hover:bg-green-400",
  },
};

const classes = colorClasses[color];
---

<div
  class={`rounded-xl p-4 bg-linear-to-br from-[#2C2C32] from-50% via-[#2C2C32] via-20% ${classes.gradient} to-120%`}
>
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center gap-4">
      <figure class="">
        <Icono class="h-10 w-auto rounded-md" aria-hidden="true" />
      </figure>
      <h3 class="text-xl font-normal text-white tracking-tighter">{title}</h3>
    </div>
    <button
      class={`size-8 ${classes.button} rounded-full cursor-pointer flex items-center justify-center transition shrink-0`}
    >
      <svg
        class="w-5 h-5 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2.5"
          d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
  <p class="text-gray-400 text-sm leading-relaxed">
    {description}
  </p>
</div>

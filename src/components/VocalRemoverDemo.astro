---
import { STEMS_CONFIG, ANIMATION_DELAYS } from './VocalRemoverDemo/constants';

// check funtionality https://vocalremover.winkermind.com/track/example/MzI=
---

<style>
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(16, 185, 129, 0);
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pulse-active {
    animation: pulse-glow 2s infinite;
  }

  .stem-item {
    animation: slide-up 0.5s ease-out forwards;
  }

  .stem-item:nth-child(1) { animation-delay: 0.1s; }
  .stem-item:nth-child(2) { animation-delay: 0.15s; }
  .stem-item:nth-child(3) { animation-delay: 0.2s; }
  .stem-item:nth-child(4) { animation-delay: 0.25s; }
  .stem-item:nth-child(5) { animation-delay: 0.3s; }
  .stem-item:nth-child(6) { animation-delay: 0.35s; }
</style>

<section class="">
  <h2 class="text-3xl font-normal text-white pt-18 pb-8 tracking-tighter">
    Apps de Inteligencia Artificial
  </h2>

      <!-- Controls Section -->
      <div class="mb-8 p-6 bg-black/30 rounded-2xl border border-slate-700/30 flex gap-6">
        <!-- Song Info -->
        <div class="mb-6 flex-1">
          <p class="text-white font-semibold mb-2">Billie Eilish - Bad Guy</p>
          <div class="h-1 bg-linear-to-r from-emerald-500/20 to-transparent rounded-full overflow-hidden">
            <div
              id="totalProgress"
              class="h-full bg-linear-to-r from-emerald-400 to-emerald-600 transition-all duration-300"
              style="width: 0%"
            ></div>
          </div>
          <div class="flex justify-between mt-2">
            <span id="currentTime" class="text-gray-400 text-xs">0:00</span>
            <span id="duration" class="text-gray-400 text-xs">0:00</span>
          </div>
        </div>

        <!-- Control Buttons -->
        <div class="flex items-center justify-center gap-4">
          <!-- Play Button -->
          <button
            id="playPauseBtn"
            class="group cursor-pointer relative size-10 bg-linear-to-br from-emerald-500 to-emerald-600 hover:from-emerald-400 hover:to-emerald-500 rounded-full flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-emerald-500/50 hover:scale-110"
          >
            <div class="absolute inset-0 rounded-full bg-emerald-400/20 group-hover:scale-125 transition-transform opacity-0 group-hover:opacity-100"></div>
            <!-- Play Icon -->
            <svg
              id="playIcon"
              class="w-6 h-6 text-white relative z-10"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"></path>
            </svg>
            <!-- Pause Icon (hidden by default) -->
            <svg
              id="pauseIcon"
              class="w-6 h-6 text-white hidden relative z-10"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <rect x="6" y="5" width="4" height="14" rx="1"></rect>
              <rect x="14" y="5" width="4" height="14" rx="1"></rect>
            </svg>
          </button>

          <!-- Stop Button -->
          <button
            id="stopBtn"
            class="group cursor-pointer size-10 bg-slate-700 hover:bg-red-500/70 rounded-full flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-red-500/30"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <rect x="6" y="6" width="12" height="12" rx="1"></rect>
            </svg>
          </button>

          <!-- Reset Button -->
          <button
            id="resetBtn"
            class="group cursor-pointer size-10 bg-slate-700 hover:bg-slate-600 rounded-full flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-slate-500/30"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              ></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Audio Elements (hidden) -->
      {STEMS_CONFIG.map((stem) => (
        <audio id={`audio-${stem.id}`} preload="auto">
          <source src={stem.file} type="audio/wav" />
        </audio>
      ))}

      <!-- Stems List -->

        <div class="space-y-3">
          {STEMS_CONFIG.map((stem, index) => (
            <div class="stem-item flex items-center gap-4 group p-3 rounded-xl hover:bg-emerald-500/5 transition-all duration-300" data-stem={stem.id} style={`animation-delay: ${ANIMATION_DELAYS[index]}s`}>
              <!-- Icon -->
              <div
                class="size-11 bg-linear-to-br from-emerald-400/40 to-slate-600 rounded-full shrink-0 flex items-center justify-center border border-emerald-400/30 group-hover:border-emerald-400/60 transition-all"
              >
                <span class="text-emerald-300 text-xs font-bold">{stem.name.charAt(0)}</span>
              </div>
              
              <!-- Waveform visualization -->
              <div
                class="flex-1 relative group/wave"
              >
                <div
                  class="h-10 bg-linear-to-r from-slate-700/50 via-slate-600/30 to-slate-700/50 rounded-lg relative overflow-hidden border border-slate-600/30 group-hover:border-emerald-400/50 transition-all"
                >
                  <div
                    class="h-full bg-linear-to-r from-emerald-500/50 to-emerald-400/30 transition-all duration-300"
                    data-progress={stem.id}
                    style="width: 0%"
                  ></div>
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-white text-xs font-semibold tracking-wide">{stem.name}</span>
                  </div>
                </div>
              </div>
              
              <!-- Mute/Unmute Button -->
              <button
                class="stem-mute-btn size-10 bg-linear-to-br from-emerald-600 to-emerald-700 hover:from-emerald-500 hover:to-emerald-600 rounded-lg flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-emerald-500/50 shrink-0 group-hover:scale-110"
                data-stem-mute={stem.id}
              >
                <!-- Volume On Icon -->
                <svg
                  class="volume-on w-4 h-4 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"
                  ></path>
                </svg>
                <!-- Volume Off Icon (hidden by default) -->
                <svg
                  class="volume-off w-4 h-4 text-white hidden"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"
                  ></path>
                </svg>
              </button>
            </div>
          ))}
        </div>


</section>

<script>
  import './VocalRemoverDemo/index.ts';
</script>

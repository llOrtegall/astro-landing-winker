---
interface Stem {
  id: string;
  name: string;
  file: string;
}

const stems: Stem[] = [
  { id: "vocals", name: "Vocals", file: "/demo/Billie_Eilish_-_bad_guy_Vocals_by_vipremixer_q5xbFCP.wav" },
  { id: "drums", name: "Drums", file: "/demo/Billie_Eilish_-_bad_guy_Drums_by_vipremixer.wav" },
  { id: "bass", name: "Bass", file: "/demo/Billie_Eilish_-_bad_guy_Bass_by_vipremixer.wav" },
  { id: "piano", name: "Piano", file: "/demo/Billie_Eilish_-_bad_guy_Piano_by_vipremixer.wav" },
  { id: "guitar", name: "Guitar", file: "/demo/Billie_Eilish_-_bad_guy_Guitar_by_vipremixer.wav" },
  { id: "other", name: "Other", file: "/demo/Billie_Eilish_-_bad_guy_Other_by_vipremixer.wav" },
];
---

<style>
  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(16, 185, 129, 0);
    }
  }

  @keyframes slide-up {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .pulse-active {
    animation: pulse-glow 2s infinite;
  }

  .stem-item {
    animation: slide-up 0.5s ease-out forwards;
  }

  .stem-item:nth-child(1) { animation-delay: 0.1s; }
  .stem-item:nth-child(2) { animation-delay: 0.15s; }
  .stem-item:nth-child(3) { animation-delay: 0.2s; }
  .stem-item:nth-child(4) { animation-delay: 0.25s; }
  .stem-item:nth-child(5) { animation-delay: 0.3s; }
  .stem-item:nth-child(6) { animation-delay: 0.35s; }
</style>

<section class="">
  <h2 class="text-3xl font-normal text-white pb-8">
    Apps de Inteligencia Artificial
  </h2>

  <div class="max-w-5xl mx-auto">
    <!-- Vocal Remover Card -->
    <div
      class="bg-linear-to-br from-slate-900/60 via-black/40 to-slate-900/60 backdrop-blur-xl rounded-3xl p-8 border border-emerald-500/20 shadow-2xl hover:border-emerald-500/40 transition-all duration-300"
    >
      <!-- Header -->
      <div class="flex items-center justify-between gap-6 mb-8 pb-6 border-b border-slate-700/50">
        <div class="flex items-center gap-4">
          <div class="w-16 h-16 bg-linear-to-br from-emerald-400 to-emerald-600 rounded-2xl shrink-0 flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <div>
            <h3 class="text-3xl font-bold text-white">Vocal Remover</h3>
            <p class="text-emerald-400/80 text-sm font-medium">Separador de stems IA</p>
          </div>
        </div>

        <button
          class="flex items-center gap-3 text-emerald-400 hover:text-emerald-300 transition-colors group"
        >
          <span class="font-medium">Pruébalo ahora</span>
          <div
            class="w-10 h-10 bg-emerald-600 hover:bg-emerald-500 rounded-full flex items-center justify-center transition-all group-hover:translate-x-1"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2.5"
                d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </button>
      </div>

      <!-- Descripción -->
      <p class="text-gray-300 text-center mb-8 font-light">
        Extrae vocales, instrumentales y stems de cualquier canción
      </p>

      <!-- Controls Section -->
      <div class="mb-8 p-6 bg-black/30 rounded-2xl border border-slate-700/30">
        <!-- Song Info -->
        <div class="mb-6">
          <p class="text-white font-semibold mb-2">Billie Eilish - Bad Guy</p>
          <div class="h-1 bg-linear-to-r from-emerald-500/20 to-transparent rounded-full overflow-hidden">
            <div
              id="totalProgress"
              class="h-full bg-linear-to-r from-emerald-400 to-emerald-600 transition-all duration-300"
              style="width: 0%"
            ></div>
          </div>
          <div class="flex justify-between mt-2">
            <span id="currentTime" class="text-gray-400 text-xs">0:00</span>
            <span id="duration" class="text-gray-400 text-xs">0:00</span>
          </div>
        </div>

        <!-- Control Buttons -->
        <div class="flex items-center justify-center gap-4">
          <!-- Play Button -->
          <button
            id="playPauseBtn"
            class="group relative w-14 h-14 bg-linear-to-br from-emerald-500 to-emerald-600 hover:from-emerald-400 hover:to-emerald-500 rounded-full flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-emerald-500/50 hover:scale-110"
          >
            <div class="absolute inset-0 rounded-full bg-emerald-400/20 group-hover:scale-125 transition-transform opacity-0 group-hover:opacity-100"></div>
            <!-- Play Icon -->
            <svg
              id="playIcon"
              class="w-6 h-6 text-white relative z-10"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path d="M8 5v14l11-7z"></path>
            </svg>
            <!-- Pause Icon (hidden by default) -->
            <svg
              id="pauseIcon"
              class="w-6 h-6 text-white hidden relative z-10"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <rect x="6" y="5" width="4" height="14" rx="1"></rect>
              <rect x="14" y="5" width="4" height="14" rx="1"></rect>
            </svg>
          </button>

          <!-- Stop Button -->
          <button
            id="stopBtn"
            class="group w-12 h-12 bg-slate-700 hover:bg-red-500/70 rounded-full flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-red-500/30"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <rect x="6" y="6" width="12" height="12" rx="1"></rect>
            </svg>
          </button>

          <!-- Reset Button -->
          <button
            id="resetBtn"
            class="group w-12 h-12 bg-slate-700 hover:bg-slate-600 rounded-full flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-slate-500/30"
          >
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
              ></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Audio Elements (hidden) -->
      {stems.map((stem) => (
        <audio id={`audio-${stem.id}`} preload="auto">
          <source src={stem.file} type="audio/wav" />
        </audio>
      ))}

      <!-- Stems List -->
      <div class="bg-linear-to-b from-emerald-500/5 to-emerald-500/0 rounded-2xl p-6 border border-emerald-500/20">
        <h4 class="text-gray-300 font-semibold mb-4 text-sm uppercase tracking-wider">Componentes de Audio</h4>
        <div class="space-y-3">
          {stems.map((stem) => (
            <div class="stem-item flex items-center gap-4 group p-3 rounded-xl hover:bg-emerald-500/5 transition-all duration-300" data-stem={stem.id}>
              <!-- Icon -->
              <div
                class="w-11 h-11 bg-linear-to-br from-emerald-400/40 to-slate-600 rounded-full shrink-0 flex items-center justify-center border border-emerald-400/30 group-hover:border-emerald-400/60 transition-all"
              >
                <span class="text-emerald-300 text-xs font-bold">{stem.name.charAt(0)}</span>
              </div>
              
              <!-- Waveform visualization -->
              <div
                class="flex-1 relative group/wave"
              >
                <div
                  class="h-10 bg-linear-to-r from-slate-700/50 via-slate-600/30 to-slate-700/50 rounded-lg relative overflow-hidden border border-slate-600/30 group-hover:border-emerald-400/50 transition-all"
                >
                  <div
                    class="h-full bg-linear-to-r from-emerald-500/50 to-emerald-400/30 transition-all duration-300"
                    data-progress={stem.id}
                    style="width: 0%"
                  ></div>
                  <div class="absolute inset-0 flex items-center justify-center">
                    <span class="text-white text-xs font-semibold tracking-wide">{stem.name}</span>
                  </div>
                </div>
              </div>
              
              <!-- Mute/Unmute Button -->
              <button
                class="stem-mute-btn w-10 h-10 bg-linear-to-br from-emerald-600 to-emerald-700 hover:from-emerald-500 hover:to-emerald-600 rounded-lg flex items-center justify-center transition-all duration-300 shadow-lg hover:shadow-emerald-500/50 shrink-0 group-hover:scale-110"
                data-stem-mute={stem.id}
              >
                <!-- Volume On Icon -->
                <svg
                  class="volume-on w-4 h-4 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"
                  ></path>
                </svg>
                <!-- Volume Off Icon (hidden by default) -->
                <svg
                  class="volume-off w-4 h-4 text-white hidden"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  stroke-width="2.5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z M17 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2"
                  ></path>
                </svg>
              </button>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Audio player state
  let isPlaying = false;
  let audioElements: HTMLAudioElement[] = [];
  let muteStates = new Map<string, boolean>();

  const stemIds = ["vocals", "drums", "bass", "piano", "guitar", "other"];

  // Format time helper
  function formatTime(seconds: number): string {
    if (isNaN(seconds)) return '0:00';
    const mins = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    return `${mins}:${secs.toString().padStart(2, '0')}`;
  }

  // Initialize audio elements
  function initAudio() {
    stemIds.forEach((id) => {
      const audio = document.getElementById(`audio-${id}`) as HTMLAudioElement;
      if (audio) {
        audioElements.push(audio);
        muteStates.set(id, false);
        
        // Update progress bar and time
        audio.addEventListener('timeupdate', () => {
          const progressBar = document.querySelector(`[data-progress="${id}"]`) as HTMLElement;
          const totalProgress = document.getElementById('totalProgress') as HTMLElement;
          const currentTimeEl = document.getElementById('currentTime');
          const durationEl = document.getElementById('duration');
          
          if (progressBar && audio.duration) {
            const progress = (audio.currentTime / audio.duration) * 100;
            progressBar.style.width = `${progress}%`;
          }
          
          if (totalProgress && audio.duration) {
            const progress = (audio.currentTime / audio.duration) * 100;
            totalProgress.style.width = `${progress}%`;
          }
          
          if (currentTimeEl) {
            currentTimeEl.textContent = formatTime(audio.currentTime);
          }
        });

        // Set duration once loaded
        audio.addEventListener('loadedmetadata', () => {
          const durationEl = document.getElementById('duration');
          if (durationEl) {
            durationEl.textContent = formatTime(audio.duration);
          }
        });
      }
    });
  }

  // Play/Pause functionality
  function togglePlayPause() {
    const playIcon = document.getElementById('playIcon');
    const pauseIcon = document.getElementById('pauseIcon');
    const playBtn = document.getElementById('playPauseBtn');

    if (isPlaying) {
      // Pause all
      audioElements.forEach(audio => audio.pause());
      playIcon?.classList.remove('hidden');
      pauseIcon?.classList.add('hidden');
      playBtn?.classList.remove('pulse-active');
    } else {
      // Play all in sync
      audioElements.forEach((audio, index) => {
        // Sync all audios to start at the same time
        if (audio.readyState >= 2) { // HAVE_CURRENT_DATA
          audio.play().catch(err => console.error(`Error playing audio ${index}:`, err));
        } else {
          audio.addEventListener('canplay', () => {
            audio.play().catch(err => console.error(`Error playing audio ${index}:`, err));
          }, { once: true });
        }
      });
      playIcon?.classList.add('hidden');
      pauseIcon?.classList.remove('hidden');
      playBtn?.classList.add('pulse-active');
    }

    isPlaying = !isPlaying;
  }

  // Stop functionality
  function stopAudio() {
    audioElements.forEach(audio => {
      audio.pause();
      audio.currentTime = 0;
    });
    
    isPlaying = false;
    const playIcon = document.getElementById('playIcon');
    const pauseIcon = document.getElementById('pauseIcon');
    const playBtn = document.getElementById('playPauseBtn');
    
    playIcon?.classList.remove('hidden');
    pauseIcon?.classList.add('hidden');
    playBtn?.classList.remove('pulse-active');
    
    // Reset progress bars
    document.querySelectorAll('[data-progress]').forEach(bar => {
      (bar as HTMLElement).style.width = '0%';
    });
    
    const totalProgress = document.getElementById('totalProgress') as HTMLElement;
    if (totalProgress) totalProgress.style.width = '0%';
    
    const currentTimeEl = document.getElementById('currentTime');
    if (currentTimeEl) currentTimeEl.textContent = '0:00';
  }

  // Reset functionality
  function resetAudio() {
    audioElements.forEach(audio => {
      audio.currentTime = 0;
    });
    
    // Reset progress bars
    document.querySelectorAll('[data-progress]').forEach(bar => {
      (bar as HTMLElement).style.width = '0%';
    });
    
    const totalProgress = document.getElementById('totalProgress') as HTMLElement;
    if (totalProgress) totalProgress.style.width = '0%';
    
    const currentTimeEl = document.getElementById('currentTime');
    if (currentTimeEl) currentTimeEl.textContent = '0:00';
  }

  // Mute/Unmute individual stem
  function toggleMute(stemId: string) {
    const audio = document.getElementById(`audio-${stemId}`) as HTMLAudioElement;
    const button = document.querySelector(`[data-stem-mute="${stemId}"]`);
    const volumeOn = button?.querySelector('.volume-on');
    const volumeOff = button?.querySelector('.volume-off');

    if (audio && button) {
      const isMuted = muteStates.get(stemId) || false;
      audio.muted = !isMuted;
      muteStates.set(stemId, !isMuted);

      // Update button styles with animation
      if (!isMuted) {
        button.classList.remove('from-emerald-600', 'to-emerald-700', 'hover:from-emerald-500', 'hover:to-emerald-600');
        button.classList.add('from-slate-500', 'to-slate-600', 'hover:from-slate-400', 'hover:to-slate-500');
        volumeOn?.classList.add('hidden');
        volumeOff?.classList.remove('hidden');
      } else {
        button.classList.remove('from-slate-500', 'to-slate-600', 'hover:from-slate-400', 'hover:to-slate-500');
        button.classList.add('from-emerald-600', 'to-emerald-700', 'hover:from-emerald-500', 'hover:to-emerald-600');
        volumeOn?.classList.remove('hidden');
        volumeOff?.classList.add('hidden');
      }
    }
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    initAudio();

    // Play/Pause button
    const playPauseBtn = document.getElementById('playPauseBtn');
    playPauseBtn?.addEventListener('click', togglePlayPause);

    // Stop button
    const stopBtn = document.getElementById('stopBtn');
    stopBtn?.addEventListener('click', stopAudio);

    // Reset button
    const resetBtn = document.getElementById('resetBtn');
    resetBtn?.addEventListener('click', resetAudio);

    // Mute buttons
    stemIds.forEach((id) => {
      const muteBtn = document.querySelector(`[data-stem-mute="${id}"]`);
      muteBtn?.addEventListener('click', () => toggleMute(id));
    });

    // Loop the audio
    audioElements.forEach(audio => {
      audio.addEventListener('ended', () => {
        if (isPlaying) {
          // Restart all audios in sync
          audioElements.forEach(a => {
            a.currentTime = 0;
            a.play();
          });
        }
      });
    });
  });
</script>

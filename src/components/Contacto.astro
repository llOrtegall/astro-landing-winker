---
import WhatAppIcon from '../assets/logos/wp.svg';
import { StarsBackground } from './inovacion/StarsBackground';
---

<section class='relative rounded-2xl overflow-hidden'>
  <div class="absolute inset-0 z-0">
    <StarsBackground
      client:visible
      pointerEvents={false}
    />
  </div>

  <div class="relative z-10 text-center">
    <h2 class="text-4xl md:text-5xl font-medium tracking-tighter text-pri mb-2">
      Contáctanos
    </h2>
    <p class="text-sec text-base sm:text-lg tracking-tighter">
      ¿Tienes dudas? Estamos aquí para ayudarte
    </p>
  </div>

  <div class="relative z-10 p-6 sm:p-8 max-w-6xl mx-auto">
    <div class="grid gap-8 sm:gap-10 md:grid-cols-3">
      <!-- Email -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 bg-quaternary/10 rounded-full flex items-center justify-center shrink-0"
        >
          <svg
            class="w-6 h-6 text-quaternary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
        </div>
        <div>
          <h4 class="text-pri font-semibold mb-1">Email</h4>
          <a
            href="mailto:hola@winkermind.com"
            class="text-sec hover:text-quaternary transition-colors"
          >
            hola@winkermind.com
          </a>
        </div>
      </div>

      <!-- Teléfono -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 bg-quaternary/10 rounded-full flex items-center justify-center shrink-0"
        >
          <WhatAppIcon class="w-6 h-6 text-quaternary" />
        </div>
        <div>
          <h4 class="text-pri font-semibold mb-1">WhatsApp</h4>
          <a
            target="_blank"
            href="https://wa.me/+51946970327"
            class="text-sec hover:text-quaternary transition-colors"
          >
            Envíanos un mensaje
          </a>
        </div>
      </div>

      <!-- Ubicación -->
      <div class="flex items-center gap-4">
        <div
          class="w-12 h-12 bg-quaternary/10 rounded-full flex items-center justify-center shrink-0"
        >
          <svg
            class="w-6 h-6 text-quaternary"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            ></path>
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            ></path>
          </svg>
        </div>
        <div>
          <h4 class="text-pri font-semibold mb-1">Ubicación</h4>
          <p class="text-sec">
            Perú
          </p>
        </div>
      </div>
    </div>
  </div>
  
</section>
            </div>
            <div>
              <h4 class="text-pri font-semibold mb-1">Email</h4>
              <a
                href="mailto:contacto@winkermind.com"
                class="text-sec hover:text-quaternary transition-colors"
              >
                contacto@winkermind.com
              </a>
            </div>
          </div>

          <!-- Teléfono -->
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-quaternary/10 rounded-full flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-quaternary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"

<section class="w-full max-w-7xl mx-auto px-6 py-20">
  <div class="text-center mb-16">
    <h2 class="text-4xl md:text-5xl font-bold text-pri mb-4">
      Contáctanos
    </h2>
    <p class="text-sec text-lg">
      ¿Tienes dudas? Estamos aquí para ayudarte
    </p>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <!-- Formulario de contacto -->
    <div class="bg-tertiary border border-border-pri rounded-2xl p-8">
      <h3 class="text-2xl font-bold text-pri mb-6">Envíanos un mensaje</h3>

      <form class="space-y-6">
        <div>
          <label for="name" class="block text-pri text-sm font-medium mb-2">
            Nombre completo
          </label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="Tu nombre"
            class="w-full px-4 py-3 bg-primary border border-border-pri rounded-lg text-pri placeholder:text-sec focus:border-quaternary focus:outline-none transition-colors"
          />
        </div>

        <div>
          <label for="email" class="block text-pri text-sm font-medium mb-2">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="tu@email.com"
            class="w-full px-4 py-3 bg-primary border border-border-pri rounded-lg text-pri placeholder:text-sec focus:border-quaternary focus:outline-none transition-colors"
          />
        </div>

        <div>
          <label for="subject" class="block text-pri text-sm font-medium mb-2">
            Asunto
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            placeholder="¿En qué podemos ayudarte?"
            class="w-full px-4 py-3 bg-primary border border-border-pri rounded-lg text-pri placeholder:text-sec focus:border-quaternary focus:outline-none transition-colors"
          />
        </div>

        <div>
          <label for="message" class="block text-pri text-sm font-medium mb-2">
            Mensaje
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            placeholder="Cuéntanos tu consulta..."
            class="w-full px-4 py-3 bg-primary border border-border-pri rounded-lg text-pri placeholder:text-sec focus:border-quaternary focus:outline-none transition-colors resize-none"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full py-4 px-6 bg-quaternary text-pri font-semibold rounded-full hover:brightness-110 transition-all"
        >
          Enviar mensaje
        </button>
      </form>
    </div>

    <!-- Información de contacto -->
    <div class="space-y-8">
      <!-- Tarjeta de información -->
      <div class="bg-tertiary border border-border-pri rounded-2xl p-8">
        <h3 class="text-2xl font-bold text-pri mb-6">Información</h3>

        <div class="space-y-6">
          <!-- Email -->
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-quaternary/10 rounded-full flex items-center justify-center shrink-0"
            >
              <svg
                class="w-6 h-6 text-quaternary"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >

---
import CardApp from "./CardApp.astro";
---

<section>
  <h2 class="text-3xl font-normal text-white mb-12">Apps de Música</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Vip Remixer -->
    <CardApp
      title="Vip Remixer"
      description="Plataforma exclusiva para DJs, encuentra remixes, transiciones, open show, mashups, etc"
      color="yellow"
    />

    <!-- Flac Downloader -->
    <CardApp
      title="Flac Downloader"
      description="Página web para descargar cualquier canción en calidad flac y sin pérdida"
      color="slate"
    />

    <!-- Mp3 Downloader -->
    <CardApp
      title="Mp3 Downloader"
      description="Página web para descargar cualquier canción en calidad mp3 320 kbps"
      color="red"
    />
  </div>

  <h2 class="text-3xl font-normal text-white my-14">
    Apps de Diseño Gráfico & Utils
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Resourzly -->
    <CardApp
      title="Resourzly"
      description="Descarga gratis templates para Photoshop, Illustrator, After Effects y más."
      color="blue"
    />

    <!-- wShare -->
    <CardApp
      title="wShare"
      description="Sube y comparte archivos gratis con tus amigos."
      color="green"
    />
  </div>
</section>

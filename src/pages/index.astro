---
import Hero from "../components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import Proyectos from "../components/Proyectos.astro";
import VocalRemoverDemo from "../components/VocalRemoverDemo.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Precios from "../components/Precios.astro";
import Blog from "../components/Blog.astro";
import Contacto from "../components/Contacto.astro";
import Faqs from "../components/faqs/Faqs.astro";
import { StarsBackground } from "../components/inovacion/StarsBackground.tsx";
---

<Layout title="Landing Page Winkermind">
	<SectionContainer id="hero">
		<Hero />
	</SectionContainer>
	<SectionContainer id="proyectos">
		<Proyectos />
		<VocalRemoverDemo />
	</SectionContainer>

	<SectionContainer id="precios">
		<Precios />
	</SectionContainer>

	<SectionContainer id="blog">
		<Blog />
		<Faqs />
	</SectionContainer>

	<SectionContainer id="contacto">
		<Contacto />
		<div class="relative mt-8 h-65 w-full">
			<StarsBackground client:visible className="rounded-2xl" pointerEvents={false} />
			<div class="pointer-events-none absolute inset-0 flex items-center justify-center">
				<p class="text-center text-2xl font-normal tracking-tight  text-pri">La innovacion continua...</p>
			</div>
		</div>
	</SectionContainer>
</Layout>

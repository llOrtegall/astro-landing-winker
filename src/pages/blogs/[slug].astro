---
import { getCollection, render } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

const iconPaths: Record<string, string> = {
  microphone:
    'M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z',
  music:
    'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3',
  bolt: 'M13 10V3L4 14h7v7l9-11h-7z',
};

const formattedDate = post.data.date.toLocaleDateString('es-ES', {
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
---

<BlogLayout title={`${post.data.title} | Winkermind Blog`}>
  <!-- Top bar -->
  <nav class="sticky top-0 z-50 bg-primary/80 backdrop-blur-xl border-b border-border-pri">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 h-14 flex items-center justify-between">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 text-sec hover:text-pri transition-colors text-sm font-medium"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Blog
      </a>
      <span class="text-sec text-xs tracking-wider uppercase">{post.data.category}</span>
    </div>
  </nav>

  <!-- Hero header -->
  <header class="relative overflow-hidden">
    {post.data.image ? (
      <!-- Header con imagen -->
      <div class="relative h-72 sm:h-96 overflow-hidden">
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-linear-to-t from-primary via-primary/60 to-transparent"></div>
        <div class="absolute bottom-0 left-0 right-0 max-w-4xl mx-auto px-4 sm:px-6 pb-10 sm:pb-12">
          <span
            class:list={[
              'inline-block text-pri text-xs font-semibold px-3 py-1.5 rounded-full mb-6',
              post.data.categoryColor === 'secondary' ? 'bg-secondary' : 'bg-quaternary',
            ]}
          >
            {post.data.category}
          </span>
        </div>
      </div>
    ) : (
      <div class="absolute inset-0 bg-linear-to-b from-quaternary/8 to-transparent"></div>
    )}
    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 pt-12 sm:pt-16 pb-10 sm:pb-12">
      {!post.data.image && (
        <!-- Category badge (solo si no hay imagen) -->
        <span
          class:list={[
            'inline-block text-pri text-xs font-semibold px-3 py-1.5 rounded-full mb-6',
            post.data.categoryColor === 'secondary' ? 'bg-secondary' : 'bg-quaternary',
          ]}
        >
          {post.data.category}
        </span>
      )}

      <!-- Title -->
      <h1 class="text-3xl sm:text-4xl lg:text-5xl font-medium tracking-tighter text-pri mb-5 leading-[1.15] max-w-3xl">
        {post.data.title}
      </h1>

      <!-- Description -->
      <p class="text-sec text-base sm:text-lg leading-relaxed mb-6 max-w-2xl">
        {post.data.description}
      </p>

      <!-- Meta info -->
      <div class="flex flex-wrap items-center gap-4 text-sm text-sec">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4 text-quaternary" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
              clip-rule="evenodd"></path>
          </svg>
          <time datetime={post.data.date.toISOString()}>{formattedDate}</time>
        </div>
        <span class="w-1 h-1 rounded-full bg-border-pri"></span>
        <div class="flex items-center gap-2">
          {post.data.image ? (
            <img
              src={post.data.image}
              alt={post.data.category}
              class="w-4 h-4 rounded object-cover"
            />
          ) : (
            <svg class="w-4 h-4 text-quaternary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d={iconPaths[post.data.icon] ?? iconPaths.bolt}></path>
            </svg>
          )}
          <span>Winkermind</span>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6">
      <div class="h-px bg-linear-to-r from-transparent via-border-pri to-transparent"></div>
    </div>
  </header>

  <!-- Article content -->
  <article class="max-w-4xl mx-auto px-4 sm:px-6 py-10 sm:py-14">
    <div class="blog-content max-w-none">
      <Content />
    </div>
  </article>

  <!-- Footer -->
  <footer class="border-t border-border-pri">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 py-10">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-tertiary border border-border-pri text-pri text-sm font-medium rounded-full hover:border-quaternary/50 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Ver todos los art√≠culos
        </a>
        <p class="text-sec text-xs">&copy; {new Date().getFullYear()} Winkermind. Todos los derechos reservados.</p>
      </div>
    </div>
  </footer>
</BlogLayout>

<style is:global>
  /* Blog content typography */
  .blog-content h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-pri);
    letter-spacing: -0.025em;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border-pri);
  }

  .blog-content h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-pri);
    letter-spacing: -0.02em;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .blog-content p {
    color: var(--color-sec);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 1.25rem;
  }

  .blog-content ul,
  .blog-content ol {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .blog-content ul {
    list-style-type: disc;
  }

  .blog-content ol {
    list-style-type: decimal;
  }

  .blog-content li {
    color: var(--color-sec);
    font-size: 1rem;
    line-height: 1.8;
    margin-bottom: 0.5rem;
    padding-left: 0.25rem;
  }

  .blog-content li::marker {
    color: var(--color-quaternary);
  }

  .blog-content strong {
    color: var(--color-pri);
    font-weight: 600;
  }

  .blog-content em {
    color: var(--color-sec);
    font-style: italic;
  }

  .blog-content a {
    color: var(--color-quaternary);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s;
  }

  .blog-content a:hover {
    opacity: 0.8;
    text-decoration: underline;
  }

  .blog-content code {
    color: var(--color-quaternary);
    background: var(--color-tertiary);
    padding: 0.15rem 0.4rem;
    border-radius: 0.375rem;
    font-size: 0.875em;
  }

  .blog-content blockquote {
    border-left: 3px solid var(--color-quaternary);
    padding-left: 1.25rem;
    margin: 1.5rem 0;
    color: var(--color-sec);
    font-style: italic;
  }

  .blog-content hr {
    border: none;
    height: 1px;
    background: var(--color-border-pri);
    margin: 2rem 0;
  }

  .blog-content h2:first-child {
    margin-top: 0;
  }
</style>
